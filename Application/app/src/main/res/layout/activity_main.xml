<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1.5">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/inventoryButton"
            android:onClick="toInventory"
            android:src="@drawable/ib"
            android:background="#00ffffff"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_weight="0.5" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listbutton"
            android:onClick="toList"
            android:background="#00ffffff"
            android:src="@drawable/lb"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/inventoryButton"
            android:layout_weight="0.5" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/requirementButton"
            android:src="@drawable/rb"
            android:layout_gravity="center_horizontal"
            android:onClick="toRequirement"
            android:background="#00ffffff"
            android:scaleType="fitCenter"
            android:layout_below="@+id/listbutton"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_weight="0.5" />
    </LinearLayout>

</RelativeLayout>
