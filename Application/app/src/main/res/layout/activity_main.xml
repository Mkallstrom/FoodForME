<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <ImageButton
            android:layout_width="145dp"
            android:layout_height="113dp"
            android:id="@+id/inventoryButton"
            android:layout_centerHorizontal="true"
            android:onClick="toInventory"
            android:src="@drawable/ib"
            android:background="#00ffffff"
            android:layout_gravity="center_horizontal" />

        <ImageButton
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:id="@+id/listbutton"
            android:onClick="toList"
            android:background="#00ffffff"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/inventoryButton"
            android:layout_alignStart="@+id/inventoryButton"
            android:src="@drawable/lb"
            android:layout_gravity="center_horizontal" />

        <ImageButton
            android:layout_width="142dp"
            android:layout_height="118dp"
            android:id="@+id/requirementButton"
            android:src="@drawable/lb"
            android:layout_below="@+id/inventoryButton"
            android:layout_centerHorizontal="true"
            android:cropToPadding="false"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.12" />

    </LinearLayout>

</RelativeLayout>
